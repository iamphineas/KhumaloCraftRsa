@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager


@model IEnumerable<KCSRSA.Models.Product>

@if (User.IsInRole("Admin"))
{
    <h1>Hi Admin</h1>
}
@{
    ViewData["Title"] = "Index";
}

<h1 class="page-title">Our Products</h1>

<p>
    <a class="create-link" asp-action="Create">Create New</a>
</p>

<table class="product-table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Name)</th>
            <th>@Html.DisplayNameFor(model => model.Price)</th>
            <th>@Html.DisplayNameFor(model => model.Category)</th>
            <th>@Html.DisplayNameFor(model => model.Availability)</th>
            <th>@Html.DisplayNameFor(model => model.ImageUrl)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.Price)</td>
                <td>@Html.DisplayFor(modelItem => item.Category)</td>
                <td>@Html.DisplayFor(modelItem => item.Availability)</td>
                <td><img src="@item.ImageUrl" alt="@item.Name" class="product-image-table" /></td>
                <td>
                    <a class="action-link" asp-action="Edit" asp-route-id="@item.ProductId">Edit</a> |
                    <a class="action-link" asp-action="Details" asp-route-id="@item.ProductId">Details</a> |
                    <a class="action-link" asp-action="Delete" asp-route-id="@item.ProductId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="product-grid">
    @foreach (var product in Model)
    {
        <div class="product-container">
            <img src="@product.ImageUrl" alt="@product.Name" />
            <div class="product-details">
                <p class="product-name">@product.Name</p>
                <p class="product-price">Price: @product.Price</p>
                <p class="product-category">Category: @product.Category</p>
                <p class="product-availability">Availability: @product.Availability</p>
            </div>
        </div>
    }
</div>

<style>
    body {
        background-color: #000; /* Black background */
        color: #fff; /* White text */
        font-family: Arial, sans-serif;
    }

    .page-title {
        text-align: center;
        color: gold; /* Gold title */
        font-size: 2em;
        margin-top: 20px;
    }

    .create-link {
        display: block;
        width: fit-content;
        margin: 20px auto;
        padding: 10px 20px;
        background-color: gold;
        color: black;
        text-align: center;
        text-decoration: none;
        border-radius: 5px;
    }

        .create-link:hover {
            background-color: #e6b800; /* Slightly darker gold on hover */
        }

    .product-table {
        width: 100%;
        border-collapse: collapse;
        margin: 20px 0;
        background-color: black;
        color: white;
    }

        .product-table th, .product-table td {
            border: 1px solid gold;
            padding: 10px;
            text-align: center;
        }

        .product-table th {
            background-color: gold;
            color: black;
        }

        .product-table .product-image-table {
            width: 50px;
            height: 50px;
            object-fit: cover;
        }

        .product-table .action-link {
            color: gold;
            text-decoration: none;
        }

            .product-table .action-link:hover {
                text-decoration: underline;
            }

    .product-grid {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 20px;
        padding: 20px;
    }

    .product-container {
        border: 2px solid gold;
        background-color: black; /* Black background inside the border */
        padding: 15px;
        display: flex;
        flex-direction: column;
        align-items: center;
        width: 220px; /* Adjust the width as needed */
        transition: transform 0.3s ease; /* Smooth transition for hover effect */
    }

        .product-container:hover {
            transform: scale(1.05); /* Slightly enlarge the container on hover */
        }

        .product-container img {
            width: 180px; /* Set a fixed width for all images */
            height: 180px; /* Set a fixed height for all images */
            object-fit: cover; /* Ensure the image covers the area without distortion */
            transition: transform 0.3s ease; /* Smooth transition for the zoom effect */
        }

            .product-container img:hover {
                transform: scale(1.1); /* Zoom in on hover */
            }

    .product-details {
        text-align: center;
    }

    .product-name, .product-price, .product-category, .product-availability {
        margin: 5px 0;
    }

    .add-to-cart {
        background-color: #000; /* Black button */
        color: #fff; /* White text */
        border: 2px solid gold; /* Gold border */
        padding: 10px 20px;
        cursor: pointer;
        font-size: 16px;
        margin-top: 10px;
        transition: background-color 0.3s ease, color 0.3s ease; /* Smooth transition for hover effect */
    }

        .add-to-cart:hover {
            background-color: gold; /* Gold background on hover */
            color: black; /* Black text on hover */
        }
</style>





