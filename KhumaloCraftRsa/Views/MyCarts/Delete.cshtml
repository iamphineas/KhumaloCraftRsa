@model KCSRSA.Models.MyCart

@{
    ViewData["Title"] = "Delete Cart Item";
}

<h1>Delete Cart Item</h1>

<h3>Are you sure you want to delete this item?</h3>
<div>
    <h4>@Model.Product.Name</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Price
        </dt>
        <dd class="col-sm-10">
            @Model.Product.Price
        </dd>
        <dt class="col-sm-2">
            Category
        </dt>
        <dd class="col-sm-10">
            @Model.Product.Category
        </dd>
        <dt class="col-sm-2">
            Availability
        </dt>
        <dd class="col-sm-10">
            @Model.Product.Availability
        </dd>
    </dl>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    @Html.AntiForgeryToken()
    <div class="form-actions">
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>

<style>
    h1, h3 {
        text-align: center;
        color: gold;
    }

    .form-actions {
        text-align: center;
    }

    .btn {
        margin: 5px;
    }
</style>

